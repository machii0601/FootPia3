<div class='container'>
  <div class='d-flex justify-content-end'>
    <% if user_signed_in? %>
      <div class="my-2">
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([['Post'], ['PostComment']]) %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
          <%= f.submit "検索", class: "btn btn-sm btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>