<div class='container'>
  <div class='row'>
    <div class='col-lg-7 col-md-9 mx-auto align-items-center'>
      <h2 class="text-center mt-4">検索</h2>
        <table class="table table-hover table-inverse">
        <!--検索対象モデルがUserの時 -->
        <% if @range == "Post" %>
        <h2>Posts search for "<%= @word %>"</h2>
          <thead>
            <tr>
              <th>title</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
          <thead>
            <tr>
              <th>ユーザー名</th>
              <th>コメント</th>
            </tr>
          <tbody>
          <h2>PostComments search for "<%= @word %>"</h2>
          <% @post_comments.each do |post_comment| %>
            <tr>
              <td>
                <%= link_to post_comment.user.first_name, user_path(post_comment.user_id) %>
              </td>
              <td><%= link_to post_comment.post_comment , post_comment_path(post_comment.id) %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>