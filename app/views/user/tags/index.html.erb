<div class='container'>
  <div class='row'>
    <div class='col-lg-7 col-md-9 mx-auto align-items-center'>
      <h2 class="text-center mt-4">タグ一覧</h2>
      <h2>Actions --></h2>
      <%= link_to 'Top', user_path(current_user) %>

      <h2>Tags --></h2>
      <ul>
        <% @tags.each do |tag| %>
          <li>
            <%# タグの名前と、関連付く記事数を表示 %>
            <%= link_to "#{tag.name} ( Posts: #{tag.posts.count} )", tag_path(tag) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
