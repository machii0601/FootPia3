<h1>User edit</h1>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :first_name, "姓"%>
        <%= f.text_field :first_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "名"%>
        <%= f.text_field :last_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :first_name_kana,"セイ"%>
        <%= f.text_field :first_name_kana, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name_kana,"メイ"%>
        <%= f.text_field :last_name_kana, class: "form-control name" %>
      </div>
      <div class="form-group">
        <div class="custom-file">
          <%= f.file_field :profile_image, id: "profile_image", accept: "image/*", class: "custom-file-input" %>
          <%= f.label :profile_image, "プロフィール画像", for: "profile_image", class: "custom-file-label" %>
        </div>
      </div>

      <script>
        $('.custom-file-input').on('change',function(){
          console.log('CHANGE');
          $(this).next('.custom-file-label').html($(this)[0].files[0].name);
        })
      </script>

      <div class="form-group">
        <%= f.label :soccer_futsal_experience,"サッカー,フットサル歴" %>
        <%= f.text_field :soccer_futsal_experience, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :position,"ポジション"%>
        <%= f.text_field :position, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :bio,"自己紹介"%>
        <%= f.text_field :bio, class: "form-control name" %>
      </div>

      <div class="form-group d-flex">
        <%= f.submit "Update", class: 'btn btn-secondary mr-3' %>
        <%= link_to "退会する", confirm_path, class: "btn btn-danger"%>
      </div>
    <% end %>
  </div>
</div>
