<h1>User::Users#show</h1>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
<h2>User info</h2>
  <%= render 'user/users/info', user: @user %>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Join Groups</h2>
      <ul>
        <% @user.group_users.each do |user_group| %>
          <li><%= link_to user_group.group.group_name, group_path(user_group.group) %></li>
        <% end %>
      </ul>
      <h2>お気に入り</h2>
      <ul>
        <% @user.favorites.each do |favorite| %>
          <li><%= link_to favorite.post.title, post_path(favorite.post) %></li>
        <% end %>
      </ul>
      <h2>投稿内容</h2>
      <% @user.posts.each do |post| %>
        <%= link_to post.title, post_path(post.id) %>
        <%= post.post_content %>
        <p>コメント件数：<%= post.post_comments.count %></p>
      <% end %>
    </div>
  </div>
</div>