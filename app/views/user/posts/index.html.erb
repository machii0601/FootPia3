<div class='container'>
  <div class='row'>
    <div class='col-lg-7 col-md-9 mx-auto align-items-center'>
      <h2 class="text-center mt-4">投稿一覧</h2>
      <h2>新規投稿</h2>
      <%= link_to 'New Post', new_post_path %>

      <h2>タグ一覧</h2>
      <%= link_to 'Tags List', tags_path %>

      <h2>Posts --></h2>
      <% @posts.each do |post| %>
        <div>
          <%= link_to post.title, post_path(post) %>
        </div>
      <% end %>
      <!--コメント件数-->
      <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
    </div>
  </div>
</div>