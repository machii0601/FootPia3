<div class="container">
  <div class="row">
    <h2>会員一覧</h2>
      <table class="table">
        <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th>Show</th>
          <th>Edit</th>
        </tr>
      </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %> <%= user.last_name %></td>
            <td><%= user.email %></td>
            <td class="<%= user.is_active ? 'text-gray' : 'text-green' %>"><%= user.is_active ? '有効' : '退会済み' %></td>
            <td>
              <%= link_to 'admin show', admin_user_path(user) %>
            </td>
            <td>
              <%= link_to 'admin edit', edit_admin_user_path(user) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

